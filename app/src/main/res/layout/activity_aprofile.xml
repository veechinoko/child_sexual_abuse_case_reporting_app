<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bbbb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aprofile">





        <TextView
            android:id="@+id/email_TextView"
            android:layout_marginTop="250dp"
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp"
            android:drawableStart="@drawable/ic_baseline_email_24" />



        <TextView
            android:id="@+id/phone_TextView"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/email_TextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp"
            android:drawableStart="@drawable/ic_baseline_phone_24" />



        <TextView
            android:id="@+id/gender_TextView"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text=""
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/icons8_male_stroke_v_40px"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_below="@id/phone_TextView"
            android:drawableStart="@drawable/icons8_male_stroke_v_40px" />



        <TextView
            android:id="@+id/facebook_TextView"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/gender_TextView"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/icons8_facebook_circled_48px"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp"
            android:drawableStart="@drawable/icons8_facebook_circled_48px" />

</RelativeLayout>