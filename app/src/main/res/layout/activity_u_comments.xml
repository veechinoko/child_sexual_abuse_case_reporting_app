<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgd"
        android:orientation="vertical"
        tools:context=".uComments">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:fontFamily="@font/muli_black"
            android:padding="15dp"
            android:gravity="center_horizontal"
            android:text="@string/user_chat_board"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/editTextpostComments"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:textSize="20sp"
            android:padding="15dp"
            android:textColor="@color/black"
            android:hint="@string/enter_comment"
            android:ems="10"
            android:layout_gravity="center_horizontal"
            android:inputType="textMultiLine"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/btnCommentt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@color/black"
            android:padding="20dp"
            android:text="Comment"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btnCommentts"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@color/black"
            android:padding="5dp"
            android:drawableTop="@drawable/mweeecoma"
            android:onClick="ViewUserComments"
            android:text="View other users comments"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>